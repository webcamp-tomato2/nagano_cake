<div class="container">
  <div class="row">
    <h5 class="title2">商品詳細</h5>
  </div>

  <div class="row">

    <div class="col-3">
      <%= attachment_image_tag @item, :image, format: 'jpeg', size:"100x100" %>
    </div>

    <div class="col-9">
      <table>
        <tr class="height: 10%">
          <td style="width: 35%">商品名</td>
          <td style="width: 60%"><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込み価格 <br>（税抜き価格）</td>
          <td>
            <%= @item.add_tax_price.to_s(:delimited) %>円 <br>
            <%= @item.price.to_s(:delimited) %>円
          </td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              <strong class="text-success">販売中</strong>
            <% elsif @item.is_active == false %>
              <strong class="text-success">販売停止中</strong>
            <% end %>
          </td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>

