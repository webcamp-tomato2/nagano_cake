<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="title">注文履歴一覧</h5>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.set_date, admin_order_path(order) %></td>
              <td><%= order.name %></td>
              <td>
                <%= order.order_details.count %>
              </td>

              <td><%= order.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>