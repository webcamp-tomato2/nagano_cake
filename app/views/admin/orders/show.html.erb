<div class="container">
  <div class="row">
    <h5 class="title2">注文履歴詳細</h5>
  </div>

  <div class="row">
    <div class="col-8 mb-5">

      <table>
        <tr>
          <td style="width: 10%">購入者</td>
          <td style="width: 35%"><%= link_to @order.customer.full_name, admin_customer_path(@order.customer) %></td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= @order.set_date %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            <%= @order.postal_code %> <%= @order.address %> <br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td>支払い方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
              <!-- to_aメソッドは配列にするメソッド。モデルにハッシュでかいていたstatusを配列にする -->
              <!-- :statusは情報を格納したいカラム
                   Order.statuses.keysはorderモデルに定義したstatusの情報を持ってきて、そのkey達(keys)を使うよ
                   ってこと、、、のはず！-->
              <%= f.select :status, Order.statuses.keys.to_a, {} %>
              <%= f.submit "更新", class: 'btn-info' %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
          <th>作成ステータス</th>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.add_tax_price.to_s(:datetime) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= (order_detail.item.add_tax_price * order_detail.amount).to_s(:delimited) %></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true do |f| %>
                  <%= f.select :making_status, OrderDetail.making_statuses.keys.to_a, {} %>
                  <%= f.submit "更新", class: 'btn-info' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table>
        <tr>
          <td style="width: 50%">合計金額</td>
          <td style="width: 40%"><%= (@order.total_payment.to_i - @order.shipping_cost).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= @order.total_payment.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>

  </div>
</div>