<div class="container">
  <div class="row">
    <div class="col-10, mx-auto, container-fluid">
      <h5 class="title3"><%= @customer.full_name %>さんの会員詳細</h5>

      <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>

        <form class="form-horizontal">

          <div class="form-group col-9">
            <%= f.label "会員ID" %>
            <%= f.label :"#{@customer.id}" %>
          </div>

          <div class="form-group col-9">
            <%= f.label "氏名", class: "form-label, col-3" %>
            <%= f.text_field :last_name, class: "form-control, col-4" %>
            <%= f.text_field :first_name, class: "form-control, col-4" %>
          </div>

          <div class="form-control, col-9">
            <%= f.label "フリガナ", class: "form-label, col-3" %>
            <%= f.text_field :last_name_kana, class: "form-control, col-4" %>
            <%= f.text_field :first_name_kana, class: "form-control, col-4" %>
          </div>

          <div class="form-control, col-9">
            <%= f.label "郵便番号", class: "form-label, col-3" %>
            <%= f.text_field :postal_code, class: "form-control, col-4" %>
          </div>

          <div class="form-control, col-9">
            <%= f.label :住所, class: "form-label, col-3" %>
            <%= f.text_field :address, class: "form-control, col-4" %>
          </div>

          <div class="form-control, col-9">
            <%= f.label "電話番号", class: "form-label, col-3" %>
            <%= f.text_field :telephone_number, class: "form-control, col-4" %>
          </div>

          <div class="form-control, col-9">
            <%= f.label "メールアドレス", class: "form-label, col-3" %>
            <%= f.text_field :email, class: "form-control, col-4" %>
          </div>

          <div class="form-control, col-9">
            <p class="form-label, col-3">会員ステータス</p>
            <%= f.radio_button :is_deleted, :false, checked: true %>
            <%= f.label :is_deleted, '有効' %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, '退会' %>
          </div>

          <%= f.submit "変更を保存", class: "btn btn-info" %>

        </form>

      <% end %>

    </div>
  </div>
</div>
