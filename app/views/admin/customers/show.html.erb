<div class="container">
  <div class="row">
    <div class= "col-6">
      <h5 class="title3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>

      <table class="table, ml-10">
        <tr>
          <td style="width: 35%">会員ID</td>
          <td style="width: 35%"><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_deleted == false %>
              <strong class="text-success">有効</strong>
            <% else %>
              <strong class="text-success">退会</strong>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-info" %></td>
          <td><%= link_to "注文履歴一覧へ", admin_path(@customer), class: "btn btn-success" %></td>
        </tr>
      </table>
      
    </div>
  </div>
</div>

