<div class="about_img__inner">
  <%= image_tag"img/cake3.jpeg",class:"about-img rounded"%>
</div>

<h5 class="title">商品一覧</h5>
<!--１つの固まり-->
<div class="container">
  <div class="row">
    <% @items.each do |item| %>
    <div class="card m-2" style="width: 270px;">
      <!--画像-->
      <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, format: 'jpeg', size: "270x270",class: "item-img card-img-top" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= item.name %></h5>
        <p class="card-text">¥<%= item.price.to_s(:delimited) %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>

<!--ジャンル検索-->
<%= render 'public/items/genre', genres: @genres %>







