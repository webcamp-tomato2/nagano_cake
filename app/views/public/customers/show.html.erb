<h5 class="title">マイページ</h5></br>
<div class="container">

	<%= link_to "会員情報編集", edit_customers_path, class: "btn btn-info mb-3" %>

  <div class="row">
    <div class="col-sm-12">
 			<table class="table table-striped">
 				<tbody>
					<tr valign="middle">
						<td width="100">氏名</td>
						<td width="100"><%= current_customer.first_name %><%= current_customer.last_name %></td>
					</tr>

					<tr valign="middle">
						<td width="200">カナ</td>
						<td width="200"><%= current_customer.first_name_kana %><%= current_customer.last_name_kana %></td>
					</tr>
					<tr valign="middle">
						<td width="100">メールアドレス</td>
						<td width="100"><%= current_customer.email %></td>
					</tr>
					<tr valign="middle">
						<td width="100">郵便番号</td>
						<td width="100"><%= current_customer.postal_code %></td>
					</tr>
					<tr valign="middle">
						<td width="100">住所</td>
						<td width="100"><%= current_customer.postal_code%><%= current_customer.address %></td>
					</tr>
					<tr valign="middle">
						<td width="100">電話番号</td>
						<td width="100"><%= current_customer.telephone_number %></td>
					</tr>
				</tbody>
			</table>
    </div>
  </div>

  <div class="row">
　	<%= link_to "配送先一覧" , addresses_path, class: "btn btn-info" %>
　	<%= link_to "注文履歴一覧", orders_path, class: "btn btn-info" %>
　</div>

</div>