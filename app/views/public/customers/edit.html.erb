<h5 class="title">会員情報編集</h5>
<div class="container">
  
  <%= form_with model: @customer, url: customers_path(@customer),method: :patch, local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: @customer %>
  <div class="row w-50 mx-auto">
    <div class="col">
      <table>
        <thead>
          <tr class="pb-5">
            <th width="200">氏名</th>
            <th><%= f.text_field :last_name, class: "form-control", autofocus: true %></th>
            <th width="50 pb-5"></th>
            <th><%= f.text_field :first_name, class: "form-control" %></th>
            <th></th>
          </tr>
          <tr>
            <th width="200">フリガナ</th>
            <th><%= f.text_field :last_name_kana, class: "form-control" %></th>
            <th width="50"></th>
            <th><%= f.text_field :first_name_kana,class: "form-control" %></th>
            <th></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= f.text_field :postal_code, class: "form-control" %></th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <th width="200">住所</th>
            <th colspan="3"><%= f.text_field :address, class: "form-control" %></th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= f.text_field :telephone_number, class: "form-control" %></th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= f.email_field :email, class: "form-control" %></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  
  <div class="row w-50 mx-auto mt-3">
    <div class="col-sm-9"><%= f.submit "編集内容を保存する", class: "btn btn-info float-right" %></div>
    <div class="col-sm-3"><%= link_to "退会画面",customers_unsubscribe_path, class: "btn btn-danger float-right" %></div>
  </div>
  
  <% end %>
</div>