<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <h5 class="title3">会員ログイン</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <form class="form-horizontal">
          <div class="form-group">
            <%= f.label :email, class: "form-label, col-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control, col-4" %>
          </div>
  
          <div class="form-group">
            <%= f.label :password, class: "form-label, col-1" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control, col-4" %>
          </div>
  
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
  
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-info" %>
          </div>
        </form>

      <% end %>

      <%= render "customers/shared/links" %>

    </div>
  </div>
</div>






